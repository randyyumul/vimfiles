" work laptop vimrc configuration
set mouse=a                              " allow use of mouse
nnoremap <silent> <Leader>et :edit ~/
nnoremap <silent> <Leader>et :!open -a Firefox 'https://flytext.in'<CR><CR>
colorscheme default
set background=light
if has("gui")
    colorscheme macvim
endif

" special commands for at work
command! Code :execute "!open https://code.amazon.com/search?term=path:" . expand('%:t')
